<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CategoryInput"
    tools:showIn="@layout/activity_category_input">

    <TextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="カテゴリの登録"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/category_add_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_text"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:hint="@string/input_category_hint" />

    <Button
        android:id="@+id/category_regiter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/category_add_text"
        android:text="@string/category_register"/>
</RelativeLayout>